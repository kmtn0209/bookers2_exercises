
    <main>
      <p id="notice"></p>
      <div class="container px-5 px-sm-0">
        <div class="row">
          <div class="col-md-3">
            <h2>User info</h2>

            <table class="table">
                <tbody>
                    <tr>
                        <th>name</th>
                        <th><%= @nickname %></th>
                    </tr>
                    <tr>
                        <th>introduction</th>
                        <th><%= @introduction %></th>
                    </tr>
                </tbody>
            </table>
            <div class="row">
             <h2 class="mt-3">New book</h2>


             <%= form_with model: @book do |f| %>
              <h4>Title</h4>
              <%= f.text_field :title %>
              <h4>Opinion</h4>
              <%= f.text_area :body %>
              <p>
               <%= f.submit 'Create Book' %>
              </p>
             <% end %>


             <% if @book.errors.any? %>
  　　　　　　　　　<div id="error_explanation">
    　　　　　 　　<h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>
    　　   　  　 <ul>
                <% @book.errors.full_messages.each do |message| %>
                 <li><%= message %></li>
                <% end %>
               </ul>
              </div>
             <% end %>
            </div>
          </div>
          <div class="col-md-8 offset-md-1">
              <h2>Books</h2>
              <table class="table table-hover table-inverse">
                  <thead>
                      <tr>
                          <th></th>
                          <th>Title</th>
                          <th>Opinion</th>
                          <th colspan="3"></th>
                      </tr>
                  </thead>
                  <tbody>
                    <tr>
                     <% @books.each do |book| %>
                      <td>
                       <a href="/users/:id">
                         <ima>ユーザー画像</ima>
                       </a>
                      </td>
                      <td>
                       <a>
                         <%= book.title %>
                       </a>
                      </td>
                      <td>
                       <%= book.body %>
                      </td>
                    <% end %>
                   </tr>
                  </tbody>
              </table>
          </div>
      </div>
    </main>
