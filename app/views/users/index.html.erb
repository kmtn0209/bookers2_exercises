  <body>
    <main>
      <p id="notice"></p>
      <div class="container px-5 px-sm-0">
        <div class="row">
          <div class="col-md-3">
            <h2>User info</h2>

            <P>name</P>
            <p>introduction</p>
            <div class="row">
             <h2 class="mt-3">New book</h2>


             <%= form_with model: @book do |f| %>
              <h4>Title</h4>
              <%= f.text_field :title %>
              <h4>Opinion</h4>
              <%= f.text_area :body %>
              <p>
               <%= f.submit 'Create Book' %>
              </p>
             <% end %>


            </div>
          </div>
          <div class="col-md-8 offset-md-1">
              <h2>Books</h2>
              <table class="table table-hover table-inverse">
                  <thead>
                      <tr>
                          <th></th>
                          <th>Title</th>
                          <th>Opinion</th>
                          <th colspan="3"></th>
                      </tr>
                  </thead>
              </table>
          </div>
      </div>
    </main>
</body>