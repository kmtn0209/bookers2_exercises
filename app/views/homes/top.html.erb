    <script src="https://kit.fontawesome.com/af2dae2a1a.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
      <main>
          <p id="notice"></p>
          <div class="container">
              <div class="row">
                  <div class="mx-auto col-11 col-sm-10 col-lg-8 col-xl-6">
                      <h1>
                          welcome to
                          <i class="fa-solid fa-book"></i>
                          <strong>Bookers</strong>
                          !!
                      </h1>
                      <p>
                          In
                          <i class="fa-solid fa-book"></i>
                          <strong>Bookers</strong>
                          ,
                      </p>
                      <p>you can shere and exchange your opinions , inpressions , and emotions</p>
                      <p>about various books!</p>
                      <div class="btn-wrapper col-10 mx-auto">
                          <div class="row">
                              <a class="btn btn-info btn-sm btn-block mb-3 sign_in" href="/users/sign_in">Log in</a>
                          </div>
                          <div class="row">
                              <a class="btn btn-success btn-sm btn-block sign_up" href="/users/sign_up">Sign up</a>
